<div class="containter m-5" >
    <div class="row">
        <div class="col-6">
        <%= form_for Album.new do |a| %>
            <div>
                <%= a.label :name %><br>
                <%= a.text_field :name %>
            </div>
            <br>
            <div>
                <%= a.label :released_at %><br>
                <%= a.date_field :released_at %>
            </div>
        </div>
        <div class="col-6">
            <div>
                <%= a.label :image_url %><br>
                <%= a.text_area :image_url %>
            </div>
                <%= a.label :artist_id %>
            <div class="form-group">
                <%= a.collection_select(:artist_id, Artist.all, :id, :name, {}, class:"custom-select") %>
            </div>
        </div>

        <div class="col-6">
            <%= a.submit class:"btn btn-primary" %>
        </div>
        <% end %>
    </div>
</div>
