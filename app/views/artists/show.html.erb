<div class="containter m-5">
    <div class="row">
        <div class="col-8">
            <h1><%= @artist.name %></h1>
            <br>
            <h5> Albums (<%= @artist.albums.count%>)</h5>
            <br>
            <div class="d-flex flex-wrap">
                <% @artist.albums.each do |album| %>     
                    <div class="bd-highlight" >            
                        <div class="card m-3" style="width:  9rem;">
                            <img src="<%= album.image_url %>" class="card-img-top" alt="foo_fighters">
                            <div class="card-body">
                                <p class="text-left"><%= album.name %></p>
                                <p class="card-text"><%= album.released_at %></p>                            
                            </div>
                        </div>              
                    </div>
                 <% end %>
            </div>  
        </div>       
        <div class="col-md-4">
            <img src="<%= @artist.image_url %>" class="card-img-top" style="width: 100%" alt="...">
        </div>
    </div>
</div>

