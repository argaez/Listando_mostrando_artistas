<div class="containter m-5" >
    <div class="row">
        <div col-6>
        <%= form_for Album.new do |a| %>
            <div>
                <%= a.label :name %><br>
                <%= a.text_field :name %>
            </div>
            <br>
            <div>
                <%= a.label :released_at %><br>
                <%= a.date_field :released_at %>
            </div>
            <br>
            <div>
                <%= a.label :image_url %><br>
                <%= a.text_area :image_url %>
            </div>
            <br>
            <div>
                <%= a.submit class:"btn btn-primary" %>
            </div>
        <% end %>
    </div>
</div>
</div>